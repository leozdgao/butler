---
  env:
    # es6: trure
    browser: true
    node: true

  ecmaFeatures:
    modules: true
    jsx: true
    experimentalObjectRestSpread: true

  rules:
    # Stylistic issue
    quotes: 0
    indent: [1, 2]
    array-bracket-spacing: [1, always]
    comma-spacing: 1
    key-spacing: 1
    object-curly-spacing: [1, always]
    semi: [1, never]
    spaced-comment: [1, always]
    space-before-function-paren: [1, always]
    space-before-blocks: [1, always]
    space-after-keywords: [1, always]
    no-inline-comments: 0
    brace-style: 0

    # Best practice
    curly: [2,  multi-line]
    eqeqeq: [1, smart]
    no-loop-func: 2
    no-alert: 2
    yoda: [2, never]
    #
    # # ES6
    # arrow-spacing : 2
    # no-var: 2
    # prefer-const: 2
    # object-shorthand: 1
    # constructor-super: 2
    # no-this-before-super: 2
    # generator-star-spacing: 0

    # Variables
    no-use-before-define: [2, nofunc]
